{
    "include": ["./src/**/*", "./test/**/*"],
    "compilerOptions": {
        /* Basic Options */
        "target": "es2018",
        "module": "none",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "lib",
        "importHelpers": true,
        "pretty": true,
        "skipLibCheck": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true
    }
}
