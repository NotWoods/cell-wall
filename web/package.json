{
    "name": "@cell-wall/web",
    "version": "2.0.0",
    "description": "Web client for the CellWall",
    "private": true,
    "license": "UNLICENSED",
    "author": "Tiger Oakes <contact@tigeroakes.com> (https://tigeroakes.com)",
    "repository": "NotWoods/cell-wall",
    "bugs": "https://github.com/NotWoods/cell-wall/issues",
    "homepage": "https://github.com/NotWoods/cell-wall#readme",
    "main": "src/server.js",
    "scripts": {
        "test": "jest",
        "build": "rollup -c",
        "lint:ts": "prettier --parser typescript \"src/**/*.ts\"",
        "lint:html": "prettier --parser html \"public/**/*.html\"",
        "lint": "npm run lint:ts -- --write && npm run lint:html -- --write",
        "lint:check": "tsc --noEmit && npm run lint:ts -- --check && npm run lint:html -- --check"
    },
    "dependencies": {
        "interactjs": "^1.3.4",
        "socket.io-client": "^2.2.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.11",
        "@types/socket.io-client": "^1.4.32",
        "jest": "^24.7.0",
        "prettier": "^1.16.4",
        "rollup": "^1.8.0",
        "rollup-plugin-commonjs": "^9.3.0",
        "rollup-plugin-node-resolve": "^4.0.1",
        "rollup-plugin-replace": "^2.1.1",
        "rollup-plugin-terser": "^4.0.4",
        "rollup-plugin-typescript": "^1.0.1",
        "ts-jest": "^24.0.1",
        "tslib": "^1.9.3",
        "typescript": "^3.4.1"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always"
    }
