{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        /* Basic Options */
        "target": "esnext",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "pretty": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        /* Module Resolution Options */
        "moduleResolution": "node"
    },
    "include": ["src/**/*", "test/**/*"]
}
