{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        /* Basic Options */
        "target": "esnext",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "pretty": true,
        "outDir": "lib",

        /* Strict Type-Checking Options */
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["src/web/**/*"]
}
