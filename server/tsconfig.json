{
    "compilerOptions": {
        /* Basic Options */
        "target": "esnext",
        "module": "commonjs",
        "checkJs": true,
        "sourceMap": true,
        "pretty": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        /* Module Resolution Options */
        "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["public/**/*"]
}
